<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/songs_list"
        android:name="es.app.attune.attune.Fragments.SongsListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="68dp"
        tools:context="es.app.attune.attune.Fragments.SongsListFragment"
        tools:listitem="@layout/fragment_songs" />

    <TextView
        android:id="@+id/empty_song_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="@string/no_data_available_songs"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:visibility="gone" />
</RelativeLayout>
