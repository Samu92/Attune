<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.app.attune.attune.activity.LoginActivity"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/app_name"
        android:cropToPadding="false"
        app:srcCompat="@drawable/title_logo" />

    <Button
        android:id="@+id/button"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/imageView"
        android:layout_gravity="bottom"
        android:layout_marginBottom="157dp"
        android:onClick="onLoginButtonClicked"
        android:text="@string/login_app"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/spotify_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button"
        android:layout_marginEnd="121dp"
        android:layout_marginTop="-157dp"
        android:clickable="true"
        android:contentDescription="@string/spotify"
        android:focusable="true"
        android:src="@drawable/spotify" />

    <ImageView
        android:id="@+id/twitter_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:layout_marginStart="113dp"
        android:layout_marginTop="-157dp"
        android:clickable="true"
        android:contentDescription="@string/twitter"
        android:focusable="true"
        android:src="@drawable/twitter" />
</RelativeLayout>
