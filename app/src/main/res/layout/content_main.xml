<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/sliding_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sliding_panel"
        android:gravity="bottom"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="es.app.attune.attune.Activity.MainActivity"
        tools:showIn="@layout/app_bar_main"
        app:umanoDragView="@+id/dragView"
        app:umanoParallaxOffset="100dp"
        app:umanoPanelHeight="68dp"
        app:umanoShadowHeight="4dp"
        app:umanoOverlay="true"
        app:umanoScrollableView="@+id/playerUI">

        <!-- MAIN CONTENT -->
        <FrameLayout
            android:id="@+id/fragmentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/no_data_available_playlist" />
        </FrameLayout>

        <!-- SLIDING LAYOUT -->
        <LinearLayout
            android:id="@+id/dragView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff">

            <LinearLayout
                android:id="@+id/playback_controls"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/slide_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_vertical_align_top_black_36dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/previous_song"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_skip_previous_blue_36dp"/>

                    <ImageView
                        android:id="@+id/play_pause_button_slide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_play_arrow_blue_36dp" />

                    <ImageView
                        android:id="@+id/next_song"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_skip_next_blue_36dp"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/playerUI"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_player_center"
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="35dp"
                    android:layout_centerHorizontal="true"/>

                <com.jackandphantom.circularprogressbar.CircleProgressbar
                    android:id="@+id/circle_progress_player"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="30dp"
                    app:cpb_roundedCorner="true"
                    app:cpb_foregroundProgressWidth="25"
                    app:cpb_foregroundProgressColor="#1864c2"
                    app:cpb_touchEnabled="true"
                    />

                <TextView
                    android:id="@+id/song_playlist_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:maxLines="1"
                    android:autoSizeMaxTextSize="20sp"
                    android:layout_below="@id/circle_progress_player"
                    android:textSize="25sp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/song_title_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:maxLines="3"
                    android:autoSizeMaxTextSize="20sp"
                    android:layout_below="@id/song_playlist_player"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/song_artist_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:autoSizeMaxTextSize="15sp"
                    android:layout_below="@id/song_title_player"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:id="@+id/playback_controls_expand"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/song_artist_player"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true">

                    <LinearLayout
                        android:background="@drawable/rounded_linear_layout"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/previous_song_expand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_skip_previous_black_36dp"/>

                        <ImageView
                            android:id="@+id/play_pause_button_slide_expand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="60dp"
                            android:src="@drawable/ic_play_arrow_white_36dp" />

                        <ImageView
                            android:id="@+id/next_song_expand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_skip_next_black_36dp"/>
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
